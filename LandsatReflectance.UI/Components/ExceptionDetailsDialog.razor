<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5"><b>Full stack trace:</b></MudText>
        <br>
        <MudText Typo="Typo.caption" Style="white-space: pre-wrap">
            @($"{Exception}")
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(_ => MudDialog.Cancel())">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public required Exception Exception { get; set; }
}
